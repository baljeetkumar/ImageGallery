<% include ../partials/header %>


<div class="container">
    <h1 style="text-align : center; "> Edit Campground</h1>
     <div class="row">
        <div style=" width:30%;margin:25px auto;">
            <form action="/campgrounds/<%= obj._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campg[name]" value="<%= obj.name %>">
            </div>    
            
            <div class="form-group">
               <input class="form-control" type="text" name="campg[image]" value="<%= obj.image %>">
            </div> 
            
            <div class="form-group">
               <input class="form-control" type="text" name="campg[description]" value="<%= obj.description%>">
            </div> 
            
            <div class="form-group">
               <button class="btn btn-primary btn-large btn-block">-submit-</button>
            </div>   
        </form>
        <a  href="/campgrounds/<%=obj._id%>">Go Back</a>
        </div>
        
    </div>

</div>


<% include ../partials/footer %>